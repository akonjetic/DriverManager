@model KonjeticZavrsni.Model.Driver

<div class="form-group">
	<label class="control-label">Ime</label>
	<input asp-for="FirstName" class="form-control" />
	<span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Prezime</label>
	<input asp-for="LastName" class="form-control" />
	<span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Država</label>
	<select asp-for="CountryId" asp-items="ViewBag.PossibleCountries" class="form-control" oninvalid="alert('Must contain 6 or more characters');"></select>
	<span asp-validation-for="CountryId" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Tim</label>
	<select asp-for="TeamId" asp-items="ViewBag.PossibleTeams" class="form-control"></select>
	<span asp-validation-for="TeamId" class="text-danger"></span>
</div>
<div class="form-group">
	<label class="control-label">Najdraža staza</label>
	<select asp-for="RaceTrackId" asp-items="ViewBag.PossibleRaceTracks" class="form-control"></select>
	<span asp-validation-for="RaceTrackId" class="text-danger"></span>
</div>
<div class="form-group">
	<input type="submit" value="Spremi" class="btn btn-outline-success" />
</div>