@using KonjeticZavrsni.Web.Models

@model DriverFilterModel

<form action="@Url.Action("Index")" id="driverForm" method="post">
	<div class="row">
		<div class="col">
			<input asp-for="FullName" class="form-control" type="text" placeholder="Ime i prezime" />
		</div>
		<div class="col">
			<input asp-for="Team" class="form-control" type="text" placeholder="Tim" />
		</div>
		<div class="col">
			<input asp-for="FavoriteTrack" class="form-control" type="text" placeholder="Najdraža staza" />
		</div>
		<div class="col">
			<input asp-for="Country" class="form-control" type="text" placeholder="Država" />
		</div>
		<div class="col">
			<button type="button" onclick="filterDrivers()" class="btn btn-outline-info">Pretraga</button>
			<a asp-action="Create" class="btn btn-success">Novi</a>
		</div>
	</div>
</form>