@model Team

@{
	ViewData["Title"] = "Details";
	var counter = 0;
}
<body style="background-image: url('https://images6.alphacoders.com/121/1218784.jpg'); background-size: 100% 100%">
<div style="background-color: white; padding: 5%">
<h2>Detalji F1 tima</h2>

@if (Model != null)
{

	<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a asp-action="Index">Popis F1 timova</a></li>
		<li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
	</ol>
</nav>

	<div>
		<h4>F1 tim</h4>
		<hr />
		<dl class="dl-horizontal">
			<dt>
				ID
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Id)
			</dd>
			<dt>
				Ime tima
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Name)
			</dd>
			<dt>
				Budžet
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Budget)
			</dd>
			
		
			@foreach (var item in ViewBag.Drivers)
					  {
				counter++;
				<dt>
							Ime vozača #@counter
						</dt>
						<dd>
							<a asp-controller="Driver" asp-action="Details" asp-route-id="@item.Id">@item.FullName</a>
						</dd>
					  }
		</dl>

		<div>
			<a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Uredi</a>
		</div>

	</div>

}
else
{
	<div class="alert alert-danger">
		Nije odabran ispravni ID vozača.
	</div>

}
</div>
</body>
